import java.util.Scanner;

public class MonetaryValue {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        while (true) {
            System.out.print("Enter a monetary amount (or type 'quit' to exit): ");
            String userInput = input.nextLine();

            if (userInput.equalsIgnoreCase("quit")) {
                System.out.println("Program ended.");
                break;
            }

            try {
                double amount = Double.parseDouble(userInput);
                MoneyCalculator.calculate(amount);
            } catch (NumberFormatException e) {
                System.out.println("⚠️ Invalid input. Please enter a valid number or 'quit'.");
            }
        }

        input.close();
    }
}

class MoneyCalculator {
    public static void calculate(double amount) {
        int cents = (int) Math.round(amount * 100);

        int tenDollar = cents / 1000;
        cents %= 1000;

        int fiveDollar = cents / 500;
        cents %= 500;

        int oneDollar = cents / 100;
        cents %= 100;

        int quarters = cents / 25;
        cents %= 25;

        int dimes = cents / 10;
        cents %= 10;

        int nickels = cents / 5;
        cents %= 5;

        int pennies = cents;

        System.out.println();
        System.out.println(tenDollar + " ten dollar bills");
        System.out.println(fiveDollar + " five dollar bills");
        System.out.println(oneDollar + " one dollar bills");
        System.out.println(quarters + " quarters");
        System.out.println(dimes + " dimes");
        System.out.println(nickels + " nickels");
        System.out.println(pennies + " pennies");
        System.out.println();
    }
}
